  <link rel="stylesheet" href="/style.css" />
  <style>
    body { background:#f8fafc; }
    .container { max-width:900px; margin:40px auto; background:#fff; padding:24px; border-radius:12px; box-shadow:0 10px 30px rgba(0,0,0,.06); }
    h1 { margin-bottom:4px; }
    small { color:#64748b; }
    label { font-weight:600; margin-top:16px; display:block; }
    input, textarea, select { width:100%; padding:10px; margin-top:6px; border-radius:8px; border:1px solid #cbd5e1; }
    .row { display:grid; grid-template-columns:1fr 1fr 1fr; gap:16px; }
    .btn { margin-top:20px; background:#22c55e; color:#fff; padding:12px 18px; border:none; border-radius:10px; font-weight:600; cursor:pointer; }
    pre { background:#0f172a; color:#e5e7eb; padding:16px; border-radius:12px; margin-top:20px; overflow:auto; }
  </style>
